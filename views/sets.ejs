<%- include('partials/head') %>

<body tabindex="-1">
  <%- include('partials/navbar', {page: '/lego/sets' }) %>
  <div class="container mx-auto p-4">

    <header class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Collections</h1>
          <p class="py-6">Browse the entire collection. Click the theme to filter by themes such as:
            <a href="/lego/sets?theme=Technic" class="btn btn-primary btn-xs">Technic</a>
            <a href="/lego/sets?theme=Classic Town" class="btn btn-primary btn-xs">Classic Town</a>
            <a href="/lego/sets?theme=Supplemental" class="btn btn-primary btn-xs">Supplemental</a>
          </p>
        </div>
      </div>
    </header>
    <br>

    <div class="overflow-x-auto overflow-y-hidden">
      <table class="table table-zebra">
        <tbody>
          <% sets.forEach(set=>{ %>
          <tr>
            <td>
              <div class="avatar">
                <div class="w-24 rounded-full ">
                  <img src=<%=set.img_url %> />
                </div>
              </div>
            </td>
            <td class="font-semibold">
              <%= set.name %> | <a href="/lego/sets?theme=<%= set.theme %>" class="btn btn-primary btn-sm">
                <%= set.theme %>
              </a>
            </td>
            <td><span class="font-bold">Year: </span>
              <%= set.year %>
              <span class="font-bold">Parts:</span>
              <%= set.num_parts %>
            </td>
            <th>
              <a href="/lego/sets/<%= set.set_num %>" class="btn btn-xs">details</a>
            </th>
          </tr>
          <% }) %>


        </tbody>
      </table>
    </div>

  </div>
</body>

<%- include('partials/footer') %>